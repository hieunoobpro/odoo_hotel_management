<odoo>
    <template id="report_booking_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="booking">
                <div class="page" style="padding: 20px; font-family: Arial, sans-serif;">
                    <!-- Header Section with Booking Code -->
                    <div style="text-align: center; margin-bottom: 30px; border-bottom: 2px solid #4CAF50; padding-bottom: 15px;">
                        <h2 style="color: #4CAF50; font-size: 24px;">Hotel Booking Confirmation</h2>
                        <h4 style="color: #333; font-size: 18px;"><strong>Booking Code:</strong> <t t-esc="booking.booking_code or 'N/A'"/></h4>
                        <h4 style="color: #333; font-size: 18px;"><strong>Sale Code:</strong> <t t-esc="booking.sale_order_id.name or 'N/A'"/></h4>
                    </div>
                    
                    <!-- Master Information -->
                    <table class="table table-bordered" style="width: 100%; border: 1px solid #ccc; border-collapse: collapse; margin-bottom: 30px;">
                        <tr style="background-color: #f2f2f2;">
                            <td style="padding: 10px; font-size: 14px;"><strong>Hotel:</strong></td>
                            <td style="padding: 10px; font-size: 14px;" t-esc="booking.hotel_id.name or 'N/A'"/>
                        </tr>
                        <tr style="background-color: #e6f7ff;">
                            <td style="padding: 10px; font-size: 14px;"><strong>Room:</strong></td>
                            <td style="padding: 10px; font-size: 14px;" t-esc="booking.room_code or 'N/A'"/>
                        </tr>
                        <tr style="background-color: #f2f2f2;">
                            <td style="padding: 10px; font-size: 14px;"><strong>Customer Name:</strong></td>
                            <td style="padding: 10px; font-size: 14px;" t-esc="booking.customer_name or 'N/A'"/>
                        </tr>
                        <tr style="background-color: #e6f7ff;">
                            <td style="padding: 10px; font-size: 14px;"><strong>Email:</strong></td>
                            <td style="padding: 10px; font-size: 14px;" t-esc="booking.customer_email or 'N/A'"/>
                        </tr>
                        <tr style="background-color: #f2f2f2;">
                            <td style="padding: 10px; font-size: 14px;"><strong>Phone:</strong></td>
                            <td style="padding: 10px; font-size: 14px;" t-esc="booking.customer_phone or 'N/A'"/>
                        </tr>
                        <tr style="background-color: #e6f7ff;">
                            <td style="padding: 10px; font-size: 14px;"><strong>Check-in Date:</strong></td>
                            <td style="padding: 10px; font-size: 14px;" t-esc="booking.checkin_date or 'N/A'"/>
                        </tr>
                        <tr style="background-color: #f2f2f2;">
                            <td style="padding: 10px; font-size: 14px;"><strong>Check-out Date:</strong></td>
                            <td style="padding: 10px; font-size: 14px;" t-esc="booking.checkout_date or 'N/A'"/>
                        </tr>
                    </table>

                    <!-- Bill Information: Product details and taxes -->
                    <h3 style="text-align: center; color: #4CAF50; margin-bottom: 20px; font-size: 20px;">Bill Information</h3>
                    <table class="table table-striped" style="width: 100%; border: 1px solid #ccc; border-collapse: collapse;">
                        <thead style="background-color: #4CAF50; color: white;">
                            <tr>
                                <th style="text-align: left; padding: 12px; font-size: 14px;">Product Name</th>
                                <th style="text-align: left; padding: 12px; font-size: 14px;">Description</th>
                                <th style="text-align: right; padding: 12px; font-size: 14px;">Quantity</th>
                                <th style="text-align: right; padding: 12px; font-size: 14px;">Unit Price</th>
                                <th style="text-align: right; padding: 12px; font-size: 14px;">Subtotal</th>
                                <th style="text-align: left; padding: 12px; font-size: 14px;">Tax</th>
                                <th style="text-align: right; padding: 12px; font-size: 14px;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="booking.sale_order_id.order_line" t-as="line">
                                <tr style="background-color: #f9f9f9;">
                                    <td style="padding: 10px; font-size: 14px;" t-esc="line.product_id.name or 'N/A'"/>
                                    <td style="padding: 10px; font-size: 14px;" t-esc="line.name or 'N/A'"/>
                                    <td style="text-align: right; padding: 10px; font-size: 14px;" t-esc="line.product_uom_qty or 1"/>
                                    <td style="text-align: right; padding: 10px; font-size: 14px;" t-esc="line.price_unit or 0.0"/> 
                                    <td style="text-align: right; padding: 10px; font-size: 14px;" t-esc="line.price_subtotal or 0.0"/> 
                                    <td style="padding: 10px; font-size: 14px;">
                                        <t t-foreach="line.tax_id" t-as="tax">
                                            <span style="color: #4CAF50;" t-esc="tax.name"/> (<t t-esc="tax.amount"/>%)<br/>
                                        </t>
                                    </td>
                                    <td style="text-align: right; padding: 10px; font-size: 14px;" t-esc="line.price_total or 0.0"/> 
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Total -->
                    <h4 style="text-align: right; margin-top: 30px; font-size: 18px; color: #4CAF50;">Total: <t t-esc="booking.sale_order_id.amount_total or 0.0"/> USD</h4>

                    <!-- Signature and Date -->
                <div style="margin-top: 30px; padding-top: 20px; border-top: 2px solid #4CAF50; text-align: end;">
                    <div style="border-top: 1px solid #333; width: 200px; margin: 0 auto; padding-top: 20px;"></div>
                    <p style="font-size: 14px; color: #333; margin-top: 20px;">
                        <strong>Date:</strong> <t t-esc="today.strftime('%d %B %Y')"/>
                    </p>
                    <p style="font-size: 14px; color: #333;"><strong>Customer Signature:</strong></p>
                </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
