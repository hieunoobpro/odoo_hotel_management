<odoo>
    <!-- Hotel List View -->
    <record id="view_hotel_list" model="ir.ui.view">
        <field name="name">hotel.management.list</field>
        <field name="model">hotel.management</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="address"/>
                <field name="floors"/>
                <field name="total_rooms"/>
            </list>
        </field>
    </record>

    <!-- Hotel Form View -->
    <record id="view_hotel_form" model="ir.ui.view">
        <field name="name">hotel.management.form</field>
        <field name="model">hotel.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="address"/>
                        <field name="floors"/>
                        <field name="total_rooms" readonly="1"/>
                    </group>
                   <notebook>
                        <page string="Rooms">
                            <field name="room_ids">
                                <list string="Rooms">
                                    <field name="room_code"/>
                                    <field name="bed_type"/>
                                    <field name="price"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Hotel Search View -->
    <record id="view_hotel_search" model="ir.ui.view">
        <field name="name">hotel.management.search</field>
        <field name="model">hotel.management</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="address"/>
            </search>
        </field>
    </record>
</odoo>
