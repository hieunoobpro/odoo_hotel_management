<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_booking_service_list" model="ir.ui.view">
            <field name="name">booking.service.list</field>
            <field name="model">booking.service</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="price"/>
                    <field name="quantity"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <!-- Room Feature Form View -->
        <record id="view_booking_service_form" model="ir.ui.view">
            <field name="name">booking.service.form</field>
            <field name="model">booking.service</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="price"/>
                            <field name="quantity"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
